{{#each}}
  <li class='card-ingredients__item'>
    <h3 class='card-ingredients__title'>{{strIngredient}}</h3>
    <p class='card-ingredients__desc'>{{strType}}</p>
    <div class='card-ingredients__btn'>
      <button class='card-ingredients__btn-learn' id={{idDrink}}>Learn more</button>
      <button class='card-ingredients__btn-remove'>
        Remove
        <svg class='card-ingredients__icon' width='18' height='18'>
          <use href='./images/icon.svg#heart'></use>
        </svg>
      </button>
    </div>
  </li>
{{/each}}