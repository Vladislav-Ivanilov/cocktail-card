<div class="modal">
{{#each this}}

  <div class='ingredients'>
    <h3 class='ingredients__title'>{{strIngredient}}</h3>
    <p class='ingredients__base'>{{strType}}</p>
    <div class='ingredients__line'></div>
    <p class='ingredients__description'>{{strDescription}}</p>

    <ul class='ingredients__list list'>
      <li class='ingredients__item'>
        <span class='ingredients__star'>✶</span>
        Type:{{strType}}
      </li>
      <li class='ingredients__item'>
        <span class='ingredients__star'>✶</span>
        Alcohol by volume:{{strAlcohol}}
      </li>
    </ul>
    <div class='ingredients__btn-wrapper'>
      <button class='ingredients__btn' id={{idDrink}}>Add to favorite</button>
    </div>
    <button class='ingredients__close-btn'>
      <svg width='32' height='32'>
        <use href='./images/icon.svg#close'></use>
      </svg>
    </button>
  </div>
{{/each}}
</div>