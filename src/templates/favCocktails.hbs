{{#each this}}
<section class="section">
  <div class="container">
    <h2 class="title">Favorite cocktails</h2>
    <div class="card">
      <ul class="card__list list">
        <li class="card__item" {{idDrink}}>
          <img
            class="card__image"
            src="{{strDrinkThumb}}"
            alt= ""
          />
          <h3 class="card__title">{{strDrink}}</h3>
          <div class="card__btn">
            <button class="card__btn-learn">Learn more</button> Learn more
            <button class="card__btn-add">
              Add to
              <svg class="card__icon" width="18" height="18">
                <use href="./images/icon.svg#heart"></use>
              </svg>
            </button>
          </div>
        </li>
      </ul>
    </div>
  </div>
</section>
{{/each}}