{{#each}}
  <div class='modal'>
    <div class='cocktaile tablet-size'>
      <div class='cocktaile__wrapper-top'>
        <img class='cocktaile-card__image' src={{strDrinkThumb}} alt='' />
        <div class='cocktaile__wrapper-bottom'>
          <h3 class='cocktaile-card__title'>{{strDrink}}</h3>
          <div class='cocktaile-ingredients'>
            <p class='cocktaile-ingredients__title'>ingredients</p>
            <p class='cocktaile-ingredients__per'>Per cocktail</p>
            <ul class='cocktail-ingridients-list list'>
              {{#each ingridients}}
                <li class='cocktail-ingridients-item'>
                  <span
                    class='cocktaile-ingredients__star'
                  >✶</span>{{this}}</li>
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
      <div class='cocktaile-card__wrapper'>
        <div class='cocktaile-card__instractions-wrapper'>
          <p class='cocktaile-card__instractions'>instractions:</p>
          <p class='cocktaile-card__description'>{{strInstructions}}</p>
        </div>
        <div class='cocktaile-card__btn-wrapper'>
          <button class='cocktaile-card__btn' type='button' id={{idDrink}}>Add
            to favorite</button>
        </div>
      </div>
      <button class='cocktaile-card__close-btn'>
        <div></div>
        <svg width='32' height='32'>
          <use href='./images/icon.svg#close'></use>
        </svg>
      </button>
    </div>

    <div class='cocktaile tablet-size'>
      <div class='cocktaile__wrapper-top'>
        <img
          class='cocktaile-card__image'
          src='./images/cocktaile-negroni.jpg'
          alt='cocktaile-negroni'
        />
        <div class='cocktaile__wrapper-bottom'>
          <h3 class='cocktaile-card__title'>{{strDrink}}</h3>
          <div class='cocktaile-ingredients'>
            <p class='cocktaile-ingredients__title'>ingredients</p>
            <p class='cocktaile-ingredients__per'>Per cocktail</p>
            <ul class='cocktaile-ingredients__list list'>
              <li class='cocktaile-ingredients__item'>
                <span class='cocktaile-ingredients__star'>✶</span>
                Ice
              </li>
              <li class='cocktaile-ingredients__item'>
                <span class='cocktaile-ingredients__star'>✶</span>
                1 ounce gin
              </li>
              <li class='cocktaile-ingredients__item'>
                <span class='cocktaile-ingredients__star'>✶</span>
                1 ounce Campari
              </li>
              <li class='cocktaile-ingredients__item'>
                <span class='cocktaile-ingredients__star'>✶</span>
                1 ounce sweet vermouth
              </li>
              <li class='cocktaile-ingredients__item'>
                <span class='cocktaile-ingredients__star'>✶</span>
                Garnish: orange peel
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class='cocktaile-card__wrapper'>
        <div class='cocktaile-card__instractions-wrapper'>
          <p class='cocktaile-card__instractions'>instractions:</p>
          <p class='cocktaile-card__description'>{{strInstructions}}</p>
        </div>
        <div class='cocktaile-card__btn-wrapper'>
          <button class='cocktaile-card__btn' type='button' id={{idDrink}}>Add to favorite</button>
        </div>
      </div>
      <button class='cocktaile-card__close-btn'>
        <svg width='32' height='32'>
          <use href='./images/icon.svg#close'></use>
        </svg>
      </button>
    </div>
  </div>
{{/each}}