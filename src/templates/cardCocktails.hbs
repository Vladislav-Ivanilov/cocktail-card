{{#each this}}
  <li class='card__item' {{idDrink}}>
    <img class='card__image' src={{strDrinkThumb}} alt='' />
    <h3 class='card__title'>{{strDrink}}</h3>
    <div class='card__btn'>
      <button class='card__btn-learn' data-id={{idDrink}} id={{idDrink}}>Learn more</button>
      <button class='card__btn-add' data-id={{idDrink}} id={{idDrink}}>
        Add to
        <svg class='card__icon' width='18' height='18'>
          <use href='./images/icon.svg#heart'></use>
        </svg>
      </button>
    </div>
  </li>
{{/each}}