{{#each this}}
  <li class='card__item' {{idDrink}}>
    <img class='card__image' src={{strDrinkThumb}} alt='' />

    <div class='card__content'>
      <h3 class='card__title'>{{strDrink}}</h3>
      <div class='card__btn'>
        <button
          class='card__btn-learn'
          data-id='{{idDrink}}'
          id={{idDrink}}
        >Learn more</button>
        <button class='card__btn-add'>
          Add to
          <svg class='card__icon' width='18' height='18'>
            <use href='./images/icon.svg#heart'></use>
          </svg>
        </button>
      </div>
    </div>

  </li>
{{/each}}